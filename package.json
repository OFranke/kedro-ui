{
  "name": "@quantumblack/carbon-ui-components",
  "version": "0.0.6",
  "description": "A collection of React components which are used in Carbon UI",
  "main": "dist/index.js",
  "scripts": {
    "ava": "CONFIG=$(pwd)/webpack.ava.config.js NODE_ENV=AVA BABEL_DISABLE_CACHE=1 ava",
    "build": "webpack -d",
    "docs:server": "styleguidist server",
    "docs:build": "styleguidist build",
    "eslint": "eslint src/*.js src/**/*.js src/**/*.jsx",
    "postinstall": "npm run build",
    "precommit": "npm test",
    "prepublish": "npm run test",
    "start": "npm run docs:server",
    "test": "npm run eslint && npm run ava"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "verbose": false,
    "babel": "inherit",
    "require": [
      "babel-register",
      "ignore-styles"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/quantumblack/carbon-ui-components.git"
  },
  "author": "Andy Shora <andy.shora@quantumblack.com>",
  "contributors": [
    {
      "name": "Andy Shora",
      "email": "andy.shora@quantumblack.com"
    },
    {
      "name": "Achilleas Tsoumitas",
      "email": "achilleas.tsoumitas@quantumblack.com"
    },
    {
      "name": "Susana Costa",
      "email": "susana.costa@quantumblack.com"
    },
    {
      "name": "Lucia Koncincova",
      "email": "lucia.koncincova@quantumblack.com"
    },
    {
      "name": "Ottis Kelleghan",
      "email": "ottis.kelleghan@quantumblack.com"
    }
  ],
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-loader": "^6.2.10",
    "babel-register": "^6.18.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-require-jsdoc": "^1.0.4",
    "ignore-styles": "^5.0.1",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "svg-react-loader": "^0.3.7"
  },
  "dependencies": {
    "@quantumblack/carbon-ui-core": "0.0.3",
    "@quantumblack/javascript-standards": "0.0.5",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-webpack-loaders": "^0.8.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.11.1",
    "classnames": "^2.2.5",
    "es6-object-assign": "^1.0.3",
    "express": "^4.14.0",
    "glob": "^7.1.1",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-styleguidist": "^4.6.1",
    "webpack": "^1.14.0"
  },
  "engines": {
    "node": "6.9",
    "npm": "3.10"
  },
  "license": "UNLICENSED",
  "homepage": "https://bitbucket.org/quantumblack/carbon-ui-components#readme"
}
